<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_weight="1">

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:ems="15"
        android:id="@+id/register_email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:drawableLeft="@mipmap/ic_person"
        android:hint="@string/email"
        android:textColorHint="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:ems="15"
        android:id="@+id/register_password"
        android:layout_below="@+id/register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_lock"
        android:hint="@string/password"
        android:textColorHint="#ffffff"/>

    <Button
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/cancel_button"
        android:onClick="cancel"
        android:layout_below="@+id/signup_button"
        android:layout_alignLeft="@+id/signup_button"
        android:layout_alignStart="@+id/signup_button"
        android:layout_alignRight="@+id/signup_button"
        android:layout_alignEnd="@+id/signup_button"
        android:background="#F44336"
        android:textColor="#ffffff" />

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createAccount"
        android:id="@+id/signup_button"
        android:onClick="errorCheckingForSignup"
        android:layout_below="@+id/register_password"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:layout_alignEnd="@+id/register_password"
        android:background="#4CAF50"
        android:textColor="#ffffff" />


</RelativeLayout>
        </ScrollView>
    </LinearLayout>